/* pages/hello/hello.wxss */
.hello{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  filter: blur(5px);
}
.hello_content{
  width: 640rpx;
  height: 500rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -320rpx;
  margin-top: -250rpx;
  text-align: center;
  color: #fff;
}
.text1{
  margin: 40rpx 0;
  font-size: 50rpx;
  font-weight: 600;
  display: block;
}
.text2{
  font-size: 36rpx;
  margin-bottom: 65rpx;
  display: block;
}
.login,.register{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #dbb763;
  font-size: 36rpx;
  color: #333;
  border-radius: 10rpx;
  margin-bottom: 35rpx;
}
.register{
  background: none;
  border: 1rpx solid #fff;
  color: #fff;
}